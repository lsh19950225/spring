<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <!-- 맵핑하는 파일 / 맵퍼파일 -->
  <mapper namespace="org.doit.ik.mapper.scott.DeptMapper">
  	<!-- mybaits-config.xml 에서 alias 로 설정할 수 있다. -->
  	<select id="selectDept" resultType="org.doit.ik.domain.DeptDTO">
  		select d.deptno, dname, loc
  			, count(e.empno) numberOfEmps
  		from dept d full join emp e on d.deptno = e.deptno
  		group by d.deptno, dname, loc
  		order by d.deptno
  	</select>
  	
  	<insert id="insertDept" parameterType="org.doit.ik.domain.DeptDTO">
  		insert into dept (deptno, dname, loc)
  		values (#{deptno}, #{dname}, #{loc})
  	</insert>
  	
  	<delete id="removeDept" parameterType="">
  		delete
  		from dept
  		<where>
  			
  		</where>
  	</delete>
  	
  	<!-- 맵핑하는 파일 / 맵퍼파일 -->
  <mapper namespace="org.doit.ik.mapper.scott.EmpMapper">
  	<!-- mybaits-config.xml 에서 alias 로 설정할 수 있다. -->
  	<!-- where deptno in (10,20,30) -->
  	<select id="selectEmp" resultType="org.doit.ik.domain.EmpDTO">
  		select *
  		from emp
  		<where>
  			<foreach collection="array" item="deptno" open="deptno in (" close=")" separator=",">
  				#{deptno}
  			</foreach>
  		</where>
  		order by deptno
  	</select>
  </mapper>
  	
  </mapper>